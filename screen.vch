# keyboard mappings for "screen" unix tool
# screen.vch

screen new = {Ctrl+a}"c";
screen remove = {Ctrl+a}"X";
screen crop = {Ctrl+a}"Q";
scrollback mode = {Ctrl+a}"[";
scrollback paste = {Ctrl+a}"]";
scrollback mark = {'>'} ;
screen kill = {Ctrl+a}"k";
screen help = {Ctrl+a}"?";
screen split = {Ctrl+a}"S";
screen title = {Ctrl+a}"A";
screen list = {Ctrl+a}'"';
screen switch = {Ctrl+a}{tab};
screen detach = {Ctrl+a}"d";
screen next = {Ctrl + a} {n};
screen prev = {Ctrl + a} {p};
screen 0..9 = {Ctrl + a} {$1};
#screen detach = {Ctrl + T} {d};
screen attach = "screen  {Enter}  {enter}";
screen join = "screen -x {enter}";


